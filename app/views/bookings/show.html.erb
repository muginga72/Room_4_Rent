<p style="color: green"><%= notice %></p>
<div id="new_booking" class="pages_index_background">
  <div class="container">
    <h1 id="editing_booking" class="display-4 text-center my-3 text-muted">Booking details</h1>

    <%= render @booking %>

    <div>
      <%= link_to "Edit this booking", edit_booking_path(@booking), class: "btn btn-outline-success" %> |
      <%= link_to "Back to bookings", bookings_path, class: "btn btn-outline-primary" %>

      <%= button_to "Delete booking", @booking, method: :delete, class: "btn btn-outline-danger mt-5 mb-3" %>
    </div>
  </div>
</div>
